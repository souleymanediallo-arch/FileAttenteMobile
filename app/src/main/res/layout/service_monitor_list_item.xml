<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeightLarge"
    android:background="@drawable/border">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"

        android:contentDescription="Icon"
        app:srcCompat="@mipmap/ic_service" />

    <TextView
        android:id="@+id/txtServiceDestination"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/imageView"
        android:layout_toRightOf="@id/imageView"
        android:gravity="center_vertical"
        android:text="Gynecologie"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txtNumPatientCourant"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/txtServiceDestination"
        android:layout_toRightOf="@id/txtServiceDestination"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="001"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtnumPatientSuivant"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/txtNumPatientCourant"
        android:layout_toRightOf="@id/txtNumPatientCourant"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="002"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtSuivant"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/txtnumPatientSuivant"
        android:layout_toRightOf="@id/txtnumPatientSuivant"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="Suivant"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtAnnuler"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/txtSuivant"
        android:layout_toRightOf="@id/txtSuivant"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:text="Annuler"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

</RelativeLayout>